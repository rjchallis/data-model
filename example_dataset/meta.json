{
  "name":"example_dataset",
  "datatypes":{
    "len":{"name":"length","type":"integer"},
    "gc":{"name":"gc","type":"percentage"},
    "covs":{"name":"covs","type":"float"},
    "cov0":{"name":"cov0","type":"float"},
    "cov1":{"name":"cov1","type":"float"},
    "taxrule":{"name":"taxrule","type":"category"},
    "besthit":{"name":"taxrule","type":"category"},
    "bestsum":{"name":"taxrule","type":"category"},
    "superkingdom":{"name":"superkingdom","type":"category","levels":6},
    "phylum":{"name":"phylum","type":"category","levels":6},
    "identifiers":{"name":"identifiers","type":"identifier"},
    "bitscore":{"name":"bitscore","type":"float"},
    "cindex":{"name":"cindex","type":"integer"},
    "evalue":{"name":"evalue","type":"float"}
  },
  "hierarchy":{
    "covs":["cov0","cov1"],
    "taxrule":["besthit","bestsum"],
    "besthit":["superkingdom","phylum"],
    "bestsum":["superkingdom","phylum"],
    "superkingdom":["bitscore","cindex","evalue"],
    "phylum":["bitscore","cindex","evalue"]
  },
  "rows":10,
  "mainplot":{
    "type":"hexbin",
    "x":{
      "datatype":["gc"],
      "bounds":[0,100],
      "scale":"linear"
    },
    "y":{
      "datatype":["covs","cov0"],
      "bounds":[0.001,1000000],
      "scale":"log10"
    },
    "series":{
      "datatype":["taxrule","besthit","superkingdom"],
      "scale":"sqrt"
    }
  }
}
